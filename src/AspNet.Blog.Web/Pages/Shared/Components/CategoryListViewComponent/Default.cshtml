@model IEnumerable<CategoryListItem>

<section class="panel panel-default mt-3">
    <div class="panel-heading">Categories</div>
    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <a asp-area="" asp-page="/Posts/Index" asp-route-category="@item.Permalink">@item.Name (@item.TotalPosts)</a>
            </li>
        }
    </ul>
</section>
