@page "/contact"
@model ContactModel
@{
    ViewData["Title"] = "Contato";
    ViewData["NavItem.Contact"] = "active";
}

@section Tagline {
    <!-- Page header with logo and tagline-->
    <header class="py-4 bg-light border-bottom mb-4">
        <div class="container">
            <div class="text-center my-4">
                <h1 class="fw-bolder">Contact Me!</h1>
            </div>
        </div>
    </header>
}

@if (ViewData["MSG_ERROR"] != null)
{
    <div class="alert alert-red alert-solid alert-icon" role="alert">
        <div class="alert-icon-aside">
            <i class="far fa-cross"></i>
        </div>
        <div class="alert-icon-content">
            <h3 class="alert-heading">Ouch!</h3>
            @ViewData["MSG_ERROR"]
            <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
}

<form id="form-contact" action="" role="form" method="post">
    <div class="mb-3 row">
        <div class="col">
            <label asp-for="ContactForm!.Name">Name</label>
            <input type="text" class="form-control" id="InputName" asp-for="ContactForm!.Name" placeholder="Enter your name">
            <span asp-validation-for="ContactForm!.Name" class="text-danger"></span>
        </div>
        <div class="col">
            <label asp-for="ContactForm!.Email">Email address</label>
            <input type="email" class="form-control" id="InputEmail" asp-for="ContactForm!.Email" placeholder="Enter email">
            <span asp-validation-for="ContactForm!.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="ContactForm!.Message">Message</label>
        <textarea class="form-control" rows="5" id="inputMessage" asp-for="ContactForm!.Message" placeholder="Type your message"></textarea>
        <span asp-validation-for="ContactForm!.Message" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>    
</form> 

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}