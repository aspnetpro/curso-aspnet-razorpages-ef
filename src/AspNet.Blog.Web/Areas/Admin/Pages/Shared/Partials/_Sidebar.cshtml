<ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

    <!-- Sidebar - Brand -->
    <a class="sidebar-brand d-flex align-items-center justify-content-center" href="index.html">
        <div class="sidebar-brand-text mx-3">ASP.NET PRO</div>
    </a>

    <!-- Divider -->
    <hr class="sidebar-divider my-0">

    <!-- Nav Item - Dashboard -->
    <li class="nav-item @SetActive(ViewData["Menu.Dashboard"])">
        <a class="nav-link" asp-area="Admin" asp-page="/Dashboard">
            <i class="fas fa-fw fa-tachometer-alt"></i>
            <span>Dashboard</span>
        </a>
    </li>

    <li class="nav-item @SetActive(ViewData["Menu.Posts"])">
        <a class="nav-link" asp-area="Admin" asp-page="/Posts/Index">
            <i class="fas fa-fw fa-file"></i>
            <span>Posts</span>
        </a>
    </li>

</ul>

@functions {
    string SetActive(object value)
    {
        if (value == null)
        {
            return "";
        }
        bool isActive = false;
        Boolean.TryParse(value.ToString(), out isActive);
        return isActive ? "active" : "";
    }
}